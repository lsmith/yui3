{
    "event": {
        "use": [
            "eventx-dom"
        ],
        "submodules": {
            "event-base": {
                "use": [
                    "eventx-dom"
                ]
            },
            "event-synthetic": {
                "use": [
                    "eventx-synthetic"
                ]
            },
            "event-delegate": {
                "use": [
                    "eventx-dom"
                ]
            },
            "event-focus": {
                "requires": [
                    "event-synthetic"
                ]
            },
            "event-key": {
                "requires": [
                    "event-synthetic"
                ]
            },
            "event-mouseenter": {
                "requires": [
                    "event-synthetic"
                ]
            },
            "event-mousewheel": {
                "requires": [
                    "node-base"
                ]
            },
            "event-resize": {
                "requires": [
                    "node-base",
                    "event-synthetic"
                ]
            },
            "event-hover": {
                "requires": [
                    "event-mouseenter"
                ]
            },
            "event-outside": {
                "requires": [
                    "event-synthetic"
                ]
            },
            "event-tap": {
                "requires": [
                    "node-base",
                    "event-base",
                    "event-touch",
                    "event-synthetic"
                ]
            },
            "event-contextmenu": {
                "requires": [
                    "event-synthetic",
                    "dom-screen"
                ]
            }
        },
        "plugins": {
            "event-touch": {
                "requires" : [
                     "node-base"
                ]
            },
            "event-base-ie": {
                "requires": [
                    "node-base"
                ],
                "after": [
                    "event-base"
                ],
                "condition": {
                   "trigger": "node-base",
                   "test": "ie-base-test.js"
                }
            }
        }
    }
}
